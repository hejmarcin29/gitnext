generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MONTAZYSTA
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  passwordHash String
  role         Role      @default(MONTAZYSTA)
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  sessions     Session[]
  montaze      Montaz[]  // montaże przypisane do montażysty
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

enum MontazStatus {
  NOWY
  W_TRAKCIE
  ZAKONCZONY
}

model Montaz {
  id              Int          @id @default(autoincrement())
  klientImie      String
  klientNazwisko  String
  status          MontazStatus @default(NOWY)
  uwagi           String?      // opcjonalne uwagi
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  montazystaId    Int
  montazysta      User         @relation(fields: [montazystaId], references: [id])

  @@index([montazystaId])
  @@index([status])
}
